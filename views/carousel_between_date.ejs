<div class="carousel-container">
    <div class="carousel-inner">
      <div class="track">
            <% for(var i = 0; i <data.length; i++){%> 
                <div class="card-container">
                    <div class="card ">
                        <div class="img " style="background-image:url('<%= data[i].affiche_url %>');background-size: cover;">
